/* General Background and Text Colors */
QWidget {
    background-color: #F5F5F5;
    color: #000000;
}

/* QPushButton Styling */
QPushButton {
    background-color: #E0E0E0;
    color: #000000;
    border: 1px solid #C0C0C0;
    padding: 5px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #D0D0D0;
}

QPushButton:pressed {
    background-color: #B0B0B0;
}

