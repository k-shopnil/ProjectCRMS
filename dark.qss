/* General Background and Text Colors */
QWidget {
    background-color: #1E1E1E;
    color: #E0E0E0;
}

/* QPushButton Styling */
QPushButton {
    background-color: #333333;
    color: #E0E0E0;
    border: 1px solid #444444;
    padding: 5px;
}

QPushButton:hover {
    background-color: #555555;
}

QPushButton:pressed {
    background-color: #777777;
}

